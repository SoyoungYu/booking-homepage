            <ul class="global-menu">
                <% 
                    var isLogin = JSON.stringify(isLogin);
                    console.log(isLogin);
    
                    if (isLogin == "true") {  
                %>
                    <li><%= username %>님</li>
                    <li onclick="location.href='/logout'">로그아웃</li>
                <% } else { %>
                    <li onclick="location.href='/signin'">로그인</li>
                    <li onclick="location.href='/signup'">회원가입</li>
                <% } %>
            </ul>
        </div>
